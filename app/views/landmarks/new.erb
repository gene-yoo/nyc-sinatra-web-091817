<h1>Create New Landmark</h1>

<form action="/landmarks" method="post">

  <p>Landmark Name: <input id="landmark_name" type="text" name="landmark[name]"> </p>
  <p>Year Completed: <input id="landmark_year_completed" type="text" name="landmark[year_completed]"></p>

  <p>Figure:
  <% @figures.each do |figure| %>
    <input id="figure_<%= figure.id %>" type="radio" name="landmark[figure_id]" value="<%= figure.id %>"><%= figure.name %></input>
  <% end %>
  </p>

  <input type="submit" value="Create New Landmark">
</form>
