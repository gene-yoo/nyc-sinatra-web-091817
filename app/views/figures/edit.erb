<h1>Edit Figure</h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <p>Name: <input id="figure_name" type="text" name="figure[name]" value="<%= @figure.name %>"></p>

  <p>Title:
  <% @titles.each do |title| %>
    <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input>
  <% end %>
  </p>

  <p>Or create new title: <input id="new_title" type="text" name="title[name]"></p>

  <p>Landmark:
  <% @landmarks.each do |landmark| %>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
  <% end %>
  </p>

  <p>Or create new landmark: <input id="new_landmark" type="text" name="landmark[name]"> Year Completed: <input type="text" name="landmark[year_completed]"></p>



  <input type="submit" value="Edit Figure">
</form>
